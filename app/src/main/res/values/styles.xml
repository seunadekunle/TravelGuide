<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ExoMediaButton.FastForward">
        <item name="android:src">@drawable/ic_round_fast_forward_24</item>
        <item name="android:contentDescription">@string/exo_controls_next_description</item>
    </style>

    <style name="ExoMediaButton.Pause">
        <item name="android:src">@drawable/ic_round_pause_24</item>
        <item name="android:contentDescription">@string/exo_controls_pause_description</item>
    </style>

    <style name="ExoMediaButton.Play">
        <item name="android:src">@drawable/ic_round_play_arrow_24</item>
        <item name="android:contentDescription">@string/exo_controls_play_description</item>
    </style>

    <style name="ExoMediaButton.Rewind">
        <item name="android:src">@drawable/ic_round_fast_rewind_24</item>
        <item name="android:contentDescription">@string/exo_controls_next_description</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/secondary_color</item>
        <item name="colorAccent">@color/tertiary_color</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="TranslucentTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">#00000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
    </style>

</resources>